{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "whatsapp-bot-server",
  "version": "1.0.0",
  "description": "WhatsApp Bot Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs",
    "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "seed": "ts-node src/scripts/seed-test-data.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.970.0",
    "@aws-sdk/s3-request-presigner": "^3.970.0",
    "@prisma/client": "5.22.0",
    "@types/cors": "^2.8.19",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.0",
    "prisma": "5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
